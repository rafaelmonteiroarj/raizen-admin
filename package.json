{
  "name": "boilerplate-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "codegen": "apollo codegen:generate --target=typescript --excludes=node_modules/ --includes=src/graphql/**/*.ts --localSchemaFile=./src/graphql/schema.gql --tagName=gql --outputFlat ./src/graphql/generated",
    "cypress": "cypress run",
    "cypress:chrome": "cypress run -b chrome",
    "cypress:open": "cypress open",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "lint": "eslint src --max-warnings=10",
    "test:unit": "jest --runInBand",
    "schema:download": "apollo client:download-schema --endpoint=http://localhost:3002/graphql ./src/graphql/schema.gql",
    "start": "next start",
    "start:dev": "next dev",
    "storybook": "start-storybook -p 6006 -s public",
    "storybook-build": "build-storybook -s public",
    "types:generate": "rimraf ./src/graphql/schema.gql && yarn schema:download && yarn codegen"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@styled-icons/boxicons-solid": "^10.34.0",
    "apollo-link-error": "^1.1.13",
    "axios": "^0.21.1",
    "formik": "^2.2.9",
    "graphql": "^15.5.1",
    "next": "10.2.3",
    "next-auth": "^3.27.3",
    "next-pwa": "^5.2.21",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-typescript": "^7.14.5",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@types/classnames": "^2.3.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.24",
    "@types/styled-components": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.1",
    "apollo": "^2.33.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "cypress": "^7.5.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.4",
    "plop": "^2.7.4",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.2"
  }
}
